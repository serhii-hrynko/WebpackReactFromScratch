# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Windows-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
indent_size = 2

# Matches the exact files package.json, .travis.yml etc.
[*{.json, .yml, .tpl, .lock, .log, .*rc, .env*, Dockerfile}]
indent_size = 2
